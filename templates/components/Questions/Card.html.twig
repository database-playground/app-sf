<div{{ attributes }}>
    <div class="app-question-card">
        <div class="app-question-card__header">
            {{ question.type }}・{{ question.difficulty|trans }}
        </div>
        <div class="app-question-card__main">
            <div class="app-question-card__content">
                <h5 class="card-title">{{ question.title }}</h5>
                <p class="card-text">{{ question.description|striptags }}</p>
            </div>

            <div class="app-question-card__operations">
                <a role="button" class="btn btn-primary" href="{{ path('app_challenge', {id: question.id}) }}">進行測驗</a>
                {% set passRate = this.passRate %}
                <div class="app-question-card__pass-rate" data-pass-rate="{{ passRate.level }}">通過率 {{ passRate.passRate }}%</div>
            </div>

            <div class="app-question-card__background">
                #{{ question.id }}
            </div>
        </div>
    </div>
</div>
