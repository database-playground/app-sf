<div{{ attributes.defaults({default: 'app-challenge-result-answer-presenter'}) }}>
    {% if this.result %}
        {% if not this.result.answer %}
            {% if this.result.same %}
                <div class="alert alert-success" role="alert">
                    答案正確 🎉！{% if appfeatures.comment %}可以到 <a href="#comments">留言區</a> 和其他人分享你的寫法！{% endif %}
                </div>
            {% else %}
                <div class="alert alert-danger" role="alert">
                    <strong>答案有誤</strong>，請對照答案確認查詢是否正確 🥺
                </div>
            {% endif %}
        {% endif %}
        <twig:Challenge:ResultPresenterModule:Table :result="this.result.queryResult"/>
    {% elseif this.error %}
    <div class="alert alert-danger" role="alert">
        {% set error = this.error %}
        <strong>{{ error.property|trans }}：</strong>{{ error.message }}
    </div>
    {% else %}
    <div class="alert alert-info" role="alert">
        完成查詢語句後，點選「提交」按鈕以檢視結果。
    </div>
    {% endif %}
</div>
