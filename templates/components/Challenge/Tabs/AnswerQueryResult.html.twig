<div {{ attributes }}>
    {% set answer = this.answer %}

    {% if answer.errorMessage %}
        <div class="alert alert-danger" role="alert">
            {{ answer.errorMessage|trans }}
        </div>
    {% endif %}

    {% if answer.result %}
        <twig:Challenge:Tabs:QueryResultTable :result="answer.result" />
    {% endif %}
</div>
